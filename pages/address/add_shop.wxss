/* pages/add_shop/add_shop.wxss */
.container{
  font-size: 32rpx;
  background: #ebebeb;
}
.name{
  background: #ffffff;
  padding: 28rpx 32rpx;
  display: flex;
  border-bottom: 2rpx solid #ebebeb;
  align-items: center;
}
.name_text{
  margin-right: 60rpx;
}
.img_list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.up_img{
  width: 156rpx;
  height: 156rpx;
  border: dashed 2rpx #ebebeb;
   position: relative;
   margin-right: 24rpx;
   margin-bottom: 24rpx;
}

.d_icon{
  position: absolute;
  height: 40rpx !important;
  width: 40rpx !important;
  top: -20rpx;
  right: -20rpx;
}
.up_img image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 48rpx;
  top: 48rpx;
}
.add_img{
position: absolute;
left:25rpx;
bottom: 10rpx;
color: #999999;
}
.store{
  padding: 28rpx 32rpx;
  margin-top: 20rpx;
   background: #ffffff;
}
.store_title{
  margin-bottom: 40rpx;
}
.submit{
  height: 88rpx;
  line-height: 88rpx;
  box-sizing: border-box;
  padding: 0 310rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  background: #0FBA57;
  border-radius: 12rpx;
  position: fixed;
  bottom: 40rpx;
  margin-left: 30rpx;
}
.preview_item{
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 2px;
  position: relative;
  margin-right: 40rpx;
  margin-bottom: 24rpx;
}
.preview_item .preview_img{
  height: 100%;
  width: 100%;
  border-radius: 2px;
}
.preview_item .close_img{
  position: absolute;
  top: -24rpx;
  right: -24rpx;
  height: 44rpx;
  width: 44rpx;
}
.pic_box{
  box-sizing: border-box;
}
.pic_item{
  width: 180rpx;
  height: 180rpx;
  display: inline-block;
  border: 1px dashed #BBBBBB;
  border-radius: 2px;
  position: relative;
}
.pic_item image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 60rpx;
  bottom: 60rpx;

}
.add{
  position: absolute;
  left: 40rpx;
  bottom: 20rpx;
  font-size: 12px;
  color: #999999;
}