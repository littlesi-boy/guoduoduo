/* pages/hot/hot.wxss */
.banner{
  height: 320rpx;
  background: #ebebeb;
}
.banner image{
    width: 100%;
    height: 300rpx;
}
.main_list{
  box-sizing: border-box;
  padding: 28rpx 32rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #EBEBEB;
}
.goods{
  width: 196rpx;
  height: 196rpx;
  margin-right: 32rpx;
  position: relative;

}

.hot{
  width: 100%;
  height: 100%;
}
.hot_logo{
  position: absolute;
  font-size: 20rpx;
  color: #FFFFFF;
  border-radius: 4rpx; 
  left: 0;
  top:0;
  padding: 4rpx 10rpx;
  width: 36rpx;
  height: 40rpx;
}
.sale{
  color: #ffffff;
 text-align: center;
 font-size: 20rpx;
 position:absolute;
left:20rpx;
top:10rpx;

}
.list_right{
  flex: 1;
}
.name{
  font-size: 32rpx;
  color: #333333;
}
.num{
  font-size: 28rpx;
  color: #999999;
  margin-top: 12rpx;

}
.price{
  display: flex;
  align-items:center;
  justify-content: space-between;
  margin-top: 50rpx;
  font-size: 36rpx;
  color: #FF5C38;
  position: relative;
  height: 100rpx;
}

.price image{
  width: 60rpx;
  height: 60rpx;
}
 .cart_num{
   position: absolute;
  top:6rpx;
right:-1rpx;
   font-size: 20rpx;
   color: #FFFFFF;
   background: #0FBA57;
   padding: 2rpx 10rpx;
   border-radius: 50%;
  }
.cost{
  color: #999999;
  font-size: 28rpx;
  text-decoration: line-through;
  display: inline-block;
  margin-left: 10rpx;
}
